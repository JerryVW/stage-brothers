  <link rel="stylesheet" type="text/css" href="./public/css/style.css">
  <script src="https://use.fontawesome.com/312b51c098.js"></script>
  
  <title>Stage Brothers</title>
</head>
<body>

    <nav class="navbar bg-dark navbar-dark navbar-expand-md py-0 fixed-top">
        <a href="#" class="navbar-brand brand">STAGE BROTHERS</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="Toggle Navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
  
        <div id="navLinks" class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li class="item">
              <a href="#" class="nav-link">HOME</a>
            </li>
            <li class="item">
              <a href="#" class="nav-link">ABOUT</a>
            </li>
            <li class="item">
              <a href="#services" class="nav-link">SERVICES</a>
            </li>
            <li class="item">
              <a href="#form" class="nav-link">CONTACT</a>
            </li>
          </ul>
        </div>
